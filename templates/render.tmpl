{{ $base := .base }}
{{ with .manifest }}
<div>
    <ul>
    <li><a href="..">..</a></li>
    {{ range $key, $value := .Overrides }}
        <li><a href="{{ $base }}{{ $key }}">{{ with $key }}{{ . }}{{ else }}EMPTY{{ end }}</a></li>
    {{ end }}
    </ul>
</div>

<form action="?" method="post" enctype="multipart/form-data">
	<div>
		Add File:
		<input type="file" id="file" name="file">
	</div>
	<div>
		Add Dir:
		<input type="file" id="file" name="directory" webkitdirectory>
	</div>
	<input type="submit">
</form>
{{ end }}

<pre>
{{ .blob }}
</pre>
