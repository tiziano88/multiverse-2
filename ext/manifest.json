
{
  "manifest_version": 2,
  "name": "MultiVerse",
  "version": "0.0.0",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "*://*.meta/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "sandbox": {
    "pages": [
      "index.html"
    ],
    "content_security_policy": "sandbox allow-scripts; default-src 'unsafe-inline';"
  },
  "icons": {
    // "128": "icon-green.png"
  },
  "browser_action": {
    // "default_icon": "icon-red.png",
    "default_title": "Load this page in a secure sandbox"
  },
//   "declarative_net_request": {
//       "rule_resources": [{
//           "id": "i1",
//           "enabled": true,
//           "path": "rules.json"
//       }]

//   }
  "minimum_chrome_version": "84"
}
